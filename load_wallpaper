#killall random_wallpaper
pkill -f random_wall
if [ "$1" == "1" ]; then
    nitrogen --set-auto /home/evanzhang/.local/share/wallpapers/ubuntu.jpg
fi
if [ "$1" == "2" ]; then
    nitrogen --set-auto /home/evanzhang/.local/share/wallpapers/windows.jpg
fi
if [ "$1" == "3" ]; then
    nitrogen --set-zoom-fill /home/evanzhang/.local/share/wallpapers/$(ls /home/evanzhang/.local/share/wallpapers | grep 'grub' | dmenu -i -fn 0 -sb '#f28048' -p \\"Which wallpaper would you like?\\")
fi
if [ "$1" == "4" ]; then
    nitrogen --set-zoom-fill /home/evanzhang/.local/share/wallpapers/$(ls /home/evanzhang/.local/share/wallpapers | dmenu -i -fn 0 -sb '#f28048' -p \\"Which wallpaper would you like?\\")
fi
if [ "$1" == "5" ]; then
    nitrogen --random --set-zoom-fill /home/evanzhang/.local/share/wallpapers/
fi
if [ "$1" == "6" ]; then
    exec /home/evanzhang/.scripts/random_wallpaper >/dev/null &
fi
