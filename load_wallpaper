#killall random_wallpaper
pkill -f random_wall

WALLPAPER_DIR=$HOME/.scripts/wallpapers/
SCRIPT_DIR=$HOME/.scripts/user-scripts/

if [ "$1" == "1" ]; then
    hsetroot -fill $WALLPAPER_DIR/ubuntu.jpg
fi
if [ "$1" == "2" ]; then
    hsetroot -fill $WALLPAPER_DIR/windows.jpg
fi
if [ "$1" == "3" ]; then
    hsetroot -fill $WALLPAPER_DIR/$(ls $WALLPAPER_DIR | grep 'grub' | dmenu -i -fn 0 -sb '#f28048' -p "Which wallpaper would you like?")
fi
if [ "$1" == "4" ]; then
    hsetroot -fill $WALLPAPER_DIR/$(ls $WALLPAPER_DIR | dmenu -i -fn 0 -sb '#f28048' -p "Which wallpaper would you like?")
fi
if [ "$1" == "5" ]; then
    hsetroot -fill $WALLPAPER_DIR/$(ls $WALLPAPER_DIR | shuf -n 1)
fi
if [ "$1" == "6" ]; then
    exec $SCRIPT_DIR/random_wallpaper >/dev/null &
fi
